@inherits LayoutComponentBase
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@using Diplom.Shared.Model
@{
    //ReportPeriod OP = localStorage.GetItemAsync<ReportPeriod>("currentOP");

    ReportPeriod OP = new ReportPeriod
    {
        Name = "4 Квартал 2020",
        StartDate = new DateTime(2020, 10, 01),
        EndDate = new DateTime(2021, 01, 01)
    };

}

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            @if (localStorage.GetItemAsync<bool>("isAuthenticated").Result)
            {
                <a href="/Index"></a>
                <a href="/ops">Текущий период: @OP.Name [@OP.StartDate - @OP.EndDate]</a>
            }
            else
            {

            }
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

